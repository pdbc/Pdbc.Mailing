
@inherits RazorEngineCore.RazorEngineTemplateBase<Pdbc.Mailing.Sample.Models.MailOneViewModel>

@{
    Layout = "layout";
}

<!-- Header -->
<table align="center" width="100%" cellspacing="0" cellpadding="0">
    <tbody>
        <tr>
            <td style="text-align: center;">
                <p class="mail-title">@Model.MailTitle</p>
            </td>
        </tr>
    </tbody>
</table>

<div class="horizontal-divider-whitespace">&nbsp;</div>

<!-- Salutation -->
<p>Hi <span class="blurrable">@Model.MailCommunicationInfo.Firstname @Model.MailCommunicationInfo.Lastname</span>,</p>
<br />

<ol>
    <li>Here you can add some information about</li>
    <li>Or here</li>
    <li>Or here</li>
</ol>
